# Supabase (get from project Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Database (Supabase project Settings > Database)
# Pooler (for app at runtime) - use "Transaction" / port 6543
DATABASE_URL="postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct (for Prisma db push / migrate) - host MUST be db.[ref].supabase.co, port 5432. User can be postgres or postgres.[ref]
DIRECT_DATABASE_URL="postgresql://postgres:[password]@db.[ref].supabase.co:5432/postgres"

# Optional: for cron resolve-matches (set in Vercel)
CRON_SECRET=your-secret

# Optional: for redirects (e.g. sign out)
NEXT_PUBLIC_APP_URL=http://localhost:3000
